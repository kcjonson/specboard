{
	"extends": "../tsconfig.json",
	"compilerOptions": {
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"target": "ES2022",
		"types": ["node"],
		"baseUrl": "..",
		"paths": {
			"@doc-platform/core": ["./shared/core/src"],
			"@doc-platform/core/*": ["./shared/core/src/*"],
			"@doc-platform/db": ["./shared/db/src"],
			"@doc-platform/db/*": ["./shared/db/src/*"],
			"@doc-platform/auth": ["./shared/auth/src"],
			"@doc-platform/auth/*": ["./shared/auth/src/*"]
		}
	},
	"include": ["src"]
}
