{
	"compilerOptions": {
		"target": "ES2022",
		"lib": ["ES2022", "DOM", "DOM.Iterable"],
		"module": "ESNext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"allowImportingTsExtensions": true,
		"strict": true,
		"strictNullChecks": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"noUncheckedIndexedAccess": true,
		"skipLibCheck": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"baseUrl": ".",
		"paths": {
			"@specboard/core": ["./shared/core/src"],
			"@specboard/core/*": ["./shared/core/src/*"],
			"@specboard/db": ["./shared/db/src"],
			"@specboard/db/*": ["./shared/db/src/*"],
			"@specboard/auth": ["./shared/auth/src"],
			"@specboard/auth/*": ["./shared/auth/src/*"],
			"@specboard/email": ["./shared/email/src"],
			"@specboard/email/*": ["./shared/email/src/*"],
			"@specboard/telemetry": ["./shared/telemetry/src"],
			"@specboard/telemetry/*": ["./shared/telemetry/src/*"],
			"@specboard/ui": ["./shared/ui/src"],
			"@specboard/platform": ["./shared/platform/src"],
			"@specboard/platform-electron": ["./shared/platform-electron/src"],
			"@specboard/platform-web": ["./shared/platform-web/src"],
			"@specboard/models": ["./shared/models/src"],
			"@specboard/router": ["./shared/router/src"],
			"@specboard/fetch": ["./shared/fetch/src"],
			"@shared/planning": ["./shared/planning"],
			"@shared/projects": ["./shared/projects"],
			"@specboard/pages": ["./shared/pages"]
		}
	},
	"exclude": ["node_modules", "dist"]
}
