{
	"name": "doc-platform",
	"private": true,
	"type": "module",
	"workspaces": [
		"api",
		"frontend",
		"mcp",
		"ssg",
		"web",
		"infra",
		"docs-desktop",
		"planning-desktop",
		"shared/*"
	],
	"scripts": {
		"test": "npm run --workspaces --if-present test",
		"typecheck": "npm run --workspaces --if-present typecheck",
		"lint": "npm run --workspaces --if-present lint",
		"lint:fix": "npm run --workspaces --if-present lint:fix",
		"clean": "npm run --workspaces --if-present clean && rm -rf node_modules"
	},
	"devDependencies": {
		"@swc/core": "^1.15.7",
		"@typescript-eslint/eslint-plugin": "^8.18.1",
		"@typescript-eslint/parser": "^8.18.1",
		"eslint": "^9.17.0",
		"jsdom": "^27.3.0",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.7.2",
		"unplugin-swc": "^1.5.9",
		"vitest": "^2.1.8"
	},
	"dependencies": {
		"polyfill-symbol-metadata": "^0.0.2"
	},
	"overrides": {
		"react": "npm:@preact/compat@^10.25.4",
		"react-dom": "npm:@preact/compat@^10.25.4"
	}
}
